<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.basin">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        >
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">

        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".LoginJoinActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".JoinActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".LoginFindUserActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".FindUserActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".main.fab_dialog"
            android:theme="@style/Transparent"/>
        <activity android:name=".main.content_modi_dialog"
            android:theme="@style/Transparent"/>

        <activity android:name=".MenuManageActivity"
            android:theme="@style/Transparent"/>
          <!--  android:theme="@android:style/Theme.Holo.Dialog"/>-->
        <service android:name=".service.BasinService"></service>
    </application>

</manifest>