<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dp">
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        card_view:cardCornerRadius="4dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/menu_recycle_layout1"
        android:background="#E6BBBBBB"
        android:padding="10dp">
            <TextView
                android:id="@+id/menu_recycle_name"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumgothic"
                android:layout_weight="8"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text=" 1 "
                />

        <ImageView
            android:id="@+id/menu_recycle_mdoify"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_edit"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumgothic"
            android:layout_weight="1.0"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            />
        <ImageView
            android:id="@+id/menu_recycle_delete"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumgothic"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_delete"
            android:layout_weight="1.0"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginLeft="5dp"

            />

    </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:id="@+id/menu_recycle_layout2"
            android:padding="10dp">
            <EditText
                android:id="@+id/menu_recycle_name2"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumgothic"
                android:layout_weight="8"
                android:paddingTop="4dp"
                android:gravity="bottom"

                />

            <ImageView
                android:id="@+id/menu_recycle_mdoify2"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_edit"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumgothic"
                android:layout_weight="0.9"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text=" 1 "
                />
            <ImageView
                android:id="@+id/menu_recycle_delete2"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumgothic"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_delete"
                android:layout_weight="0.9"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text=" 1 "
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>